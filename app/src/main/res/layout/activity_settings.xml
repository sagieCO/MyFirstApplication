<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הגדרות משתמש"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חשבון"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עריכת פרופיל"
            android:backgroundTint="#E3F2FD"
            android:textColor="#1976D2"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מחיקת חשבון"
            android:backgroundTint="#FFEBEE"
            android:textColor="#D32F2F"
            android:layout_marginTop="4dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="התראות"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הפעל התראות"
            android:padding="10dp" />

        <Switch
            android:id="@+id/switchUpdates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="עדכונים ומבצעים"
            android:padding="10dp" />

        <Switch
            android:id="@+id/switchSilent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מצב שקט"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="תצוגה"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מצב כהה (Dark Mode)"
            android:padding="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="מידע נוסף"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="#666666"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFAQ"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שאלות נפוצות (FAQ)"
            android:gravity="start"
            android:textColor="#444444" />

        <Button
            android:id="@+id/btnRateApp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="דרגו אותנו בחנות"
            android:gravity="start"
            android:textColor="#444444" />

    </LinearLayout>
</ScrollView>