<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E94FD"
    android:id="@+id/mainLayout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="205dp"
        android:layout_height="110dp"
        android:layout_marginTop="36dp"
        android:background="#E46A6A"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="My First Application"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/playerScore"
        android:layout_width="205dp"
        android:layout_height="197dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/GuessGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image1"
        app:layout_constraintVertical_bias="0.556" />

    <TextView
        android:id="@+id/output"
        android:layout_width="180dp"
        android:layout_height="97dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spButton"
        app:layout_constraintVertical_bias="0.646" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="186dp"
        android:layout_height="74dp"
        android:backgroundTint="#AAAAAA"
        android:text="cohen"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.968" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="193dp"
        android:layout_height="72dp"
        android:backgroundTint="#AAAAAA"
        android:text="sagie"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.968" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="72dp"
        android:layout_height="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.799"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581" />

    <TextView
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:textSize="14sp"
        android:text="play music"
        app:layout_constraintBottom_toTopOf="@+id/musicBtn"
        app:layout_constraintStart_toEndOf="@+id/playerScore"
        app:layout_constraintTop_toBottomOf="@+id/linerPage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="141dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="change background"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linerPage"
        app:layout_constraintVertical_bias="1.0" />

    <SeekBar
        android:id="@+id/sb"
        android:layout_width="222dp"
        android:layout_height="106dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/output"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></SeekBar>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="167dp"
        android:layout_height="167dp"
        android:layout_marginTop="36dp"
        android:alpha="0"
        android:src="@drawable/img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="162dp"
        android:layout_height="170dp"
        android:alpha="1"
        android:src="@drawable/img_1"
        app:layout_constraintBottom_toTopOf="@+id/sb"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/GuessGame"
        android:layout_width="200dp"
        android:layout_height="83dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:text="go to guess the number"
        app:layout_constraintBottom_toTopOf="@+id/sb"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/linerPage"
        android:layout_width="188dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="new page liner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Switch
        android:id="@+id/musicBtn"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toStartOf="@+id/framePage"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/playerScore"
        app:layout_constraintTop_toBottomOf="@+id/linerPage" />

    <Button
        android:id="@+id/framePage"
        android:layout_width="106dp"
        android:layout_height="65dp"
        android:layout_marginTop="16dp"
        android:text="Frame"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toEndOf="@+id/playerScore"
        app:layout_constraintTop_toBottomOf="@+id/linerPage" />

    <Button
        android:id="@+id/spButton"
        android:layout_width="133dp"
        android:layout_height="82dp"
        android:layout_marginEnd="36dp"
        android:text="sp page"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:layout_constraintVertical_bias="0.133" />
</androidx.constraintlayout.widget.ConstraintLayout>
